---
// Imports
import CompNavigation from "./CompNavigation.astro";
import CompLogoLink from "./CompLogoLink.astro";
import CompSocialLinks from "./CompSocialLinks.astro";
---

<footer class="site-footer">
  <div class="l-wrapper l-region">
    <div class="l-repel">
      <div class="l-cluster">
        <CompLogoLink variant="secondary" />
        <!-- Omit label if navigation links are identical. -->
        <CompNavigation label="Footer Navigation"/>
      </div>
      <CompSocialLinks />
    </div>
  </div>
</footer>

<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;
  @use "../styles/20-mixins/media-query" as *;

  footer {
    --space-region: #{get(space, l)};
    background-color: get(background-color, grayish-dark-blue);
    color: #FFFFFF;

    @include media-query(from, tablet) {
      --space-region: #{get(space, m)};
    }
  }
</style>