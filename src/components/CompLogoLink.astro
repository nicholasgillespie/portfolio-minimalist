---
// Imports
import CompIcons from "./CompIcons.astro";
import { CONFIG_BASE, SITE_TITLE } from "../consts";
---

<a href={CONFIG_BASE === "" ? "/" : CONFIG_BASE}>
  <svg class="site-logo" fill="currentColor" viewBox="0 0 61 32">
    <use xlink:href="#site-logo"></use>
  </svg>
  <span class="u-vh">{SITE_TITLE}</span>  
</a>
<CompIcons />

<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;

  a {
    display: inline-flex;
  }

  .site-logo {
    block-size: 1lh;
    font-size: 1.5em;
  }
</style>