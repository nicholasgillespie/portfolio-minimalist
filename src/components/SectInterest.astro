---
// Imports
import CompButton from '../components/CompButton.astro';
---

<section class="interest | l-wrapper l-region l-sidebar">
  <h2 class="sidebar">Interested in doing a project together?</h2>
  <div class="not-sidebar">
    <CompButton href="/contact" text="Contact Me" />
  </div>
</section>

<style lang="scss">
	@use "../styles/20-mixins/media-query" as *;

  .line {
    flex-grow: 1; /* Allows the line to expand and fill the available space */
    flex-shrink: 1; /* Allows the line to shrink if necessary, optional based on your design */
    flex-basis: 0%; /* Sets the base width of the line to 0%, allowing it to grow */
    height: 1px; /* Thin line */
    background-color: #000; /* Line color, change as needed */
    /* Remove the width: 80%; line */
  }

	.interest {
		--sidebar-vertical-alignment: center;
    text-align: center;
		
		@include media-query(from, tablet) {
      --sidebar-target-width: 11ch;
      --sidebar-content-min-width: 1%;
      text-align: start;

      & > .not-sidebar {
        display: flex;
        margin-inline-start: auto;
        text-align: end;
        position: relative;
        justify-content: flex-end;

        &::before {
          content: "";
          flex-grow: 1;
          block-size: var(--border-width);
          background-color: var(--color-soft-light-grey);
          margin-block: auto;
          margin-inline-end: var(--space-gutter);
        }
      }
		}
		
		@include media-query(from, desktop) {
      --sidebar-target-width: 14ch;
      --sidebar-content-min-width: 1%;
		}
	}